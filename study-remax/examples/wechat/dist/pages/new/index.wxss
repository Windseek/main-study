@import "./../../remax-styles.wxss";
.page-add-todo {
  display: flex;
  flex: 1;
  flex-direction: column;
  min-height: 100vh;
}

.add-todo {
  padding: 40rpx;
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-todo-input {
  display: block;
  font-size: 50rpx;
  font-weight: 100;
  padding: 5rpx 5rpx;
  background: none;
  border:none;
  border-bottom: 1rpx solid #DFDFDF;
  color: #0EFFD6;
  width: 100%;
}



.todo-footer {
  padding: 20rpx 0 100rpx;
  font-size: 48rpx;
  font-weight: 200;
  text-align: center;
}

